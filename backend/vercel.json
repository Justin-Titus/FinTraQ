{
  "version": 2,
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "250mb",
        "includeFiles": [
          "models/**",
          "routes/**"
        ],
        "excludeFiles": [
          "__pycache__/**",
          "*.pyc",
          "*.pyo",
          "*.pyd",
          "*.so",
          "*.log",
          "*.md",
          "*.rst",
          "*.ipynb",
          "*.csv",
          "*.tsv",
          "*.parquet",
          "*.feather",
          "*.h5",
          "*.hdf5",
          "*.db",
          "*.sqlite*",
          "*.bak",
          "*.tmp",
          "*.egg-info/**",
          "build/**",
          "dist/**",
          ".venv/**",
          "venv/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.py"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "pip install -r requirements-prod.txt"
}
